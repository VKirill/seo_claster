<?xml version="1.0" encoding="UTF-8"?>
<!--
    Маппинг сокращений и алиасов городов к полным официальным названиям
    
    Используется для:
    - Красивого отображения городов в экспорте (Excel, JSON)
    - Преобразования СПб → Санкт-Петербург, МСК → Москва и т.д.
    
    Формат:
    <alias short="короткое_название" full="Полное Название" />
    
    Примеры:
    - short="спб" full="Санкт-Петербург"  - алиас
    - short="питере" full="Санкт-Петербург"  - падежная форма
    - short="москва" full="Москва"  - капитализация
-->
<city_aliases>
    <!-- Санкт-Петербург -->
    <alias short="спб" full="Санкт-Петербург" />
    <alias short="петербург" full="Санкт-Петербург" />
    <alias short="петербурга" full="Санкт-Петербург" />
    <alias short="петербурге" full="Санкт-Петербург" />
    <alias short="петербургу" full="Санкт-Петербург" />
    <alias short="петербургом" full="Санкт-Петербург" />
    <alias short="питер" full="Санкт-Петербург" />
    <alias short="питера" full="Санкт-Петербург" />
    <alias short="питере" full="Санкт-Петербург" />
    <alias short="питеру" full="Санкт-Петербург" />
    <alias short="питером" full="Санкт-Петербург" />
    
    <!-- Москва -->
    <alias short="мск" full="Москва" />
    
    <!-- Екатеринбург -->
    <alias short="екб" full="Екатеринбург" />
    
    <!-- Новосибирск -->
    <alias short="нск" full="Новосибирск" />
</city_aliases>

